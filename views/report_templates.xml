<odoo>
    <!-- Custom Invoice Template -->
    <template id="monstar_invoice_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page" style="font-family: Arial, sans-serif; font-size:13px;">

                    <!-- Header -->
                    <h2 style="text-align:center; text-transform:uppercase; margin-bottom:15px;">Invoice</h2>

                    <!-- Top Layout: Left (Addresses) | Right (Invoice Info) -->
                    <table style="width:100%; margin-bottom:20px; border-collapse:collapse;">
                        <tr>
                            <!-- Left Box -->
                            <td style="width:60%; vertical-align:top; padding-right:10px;">
                                <table style="width:100%; border:1px solid #000; border-collapse:collapse;">
                                    <tr>
                                        <td style="padding:8px; border-bottom:1px solid #000;">
                                            <strong>From (Company):</strong><br/>
                                            <span t-esc="doc.company_id.name"/><br/>
                                            <span t-esc="doc.company_id.street"/><br/>
                                            <span t-esc="doc.company_id.city"/> <span t-esc="doc.company_id.zip"/><br/>
                                            <span t-esc="doc.company_id.country_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px; border-bottom:1px solid #000;">
                                            <strong>Ship To (Delivery Address):</strong><br/>
                                            <span t-esc="doc.partner_shipping_id.name or doc.partner_id.name"/><br/>
                                            <span t-esc="doc.partner_shipping_id.street or doc.partner_id.street"/><br/>
                                            <span t-esc="doc.partner_shipping_id.city or doc.partner_id.city"/> 
                                            <span t-esc="doc.partner_shipping_id.zip or doc.partner_id.zip"/><br/>
                                            <span t-esc="doc.partner_shipping_id.country_id.name or doc.partner_id.country_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">
                                            <strong>Supplier / Vendor:</strong><br/>
                                            <span t-esc="doc.partner_id.name"/><br/>
                                            <span t-esc="doc.partner_id.street or ''"/><br/>
                                            <span t-esc="doc.partner_id.city or ''"/> <span t-esc="doc.partner_id.zip or ''"/><br/>
                                            <span t-esc="doc.partner_id.country_id.name or ''"/><br/>
                                            <span t-esc="doc.partner_id.phone or ''"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>

                            <!-- Right Box -->
                            <td style="width:40%; vertical-align:top;">
                                <table style="width:100%; border:1px solid #000; border-collapse:collapse;">
                                    <tr>
                                        <td style="padding:8px; border-bottom:1px solid #000;">
                                            <strong>Invoice No:</strong><br/>
                                            <span t-esc="doc.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px; border-bottom:1px solid #000;">
                                            <strong>Date:</strong><br/>
                                            <span t-esc="doc.invoice_date"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px;">
                                            <strong>Other References:</strong><br/>
                                            <span t-esc="doc.ref or ''"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    <!-- Lines -->
                    <table style="width:100%; border-collapse:collapse; margin-bottom:15px;">
                        <thead>
                            <tr style="background-color:#f2f2f2;">
                                <th style="border:1px solid #ccc; padding:5px;">Description of Goods</th>
                                <th style="border:1px solid #ccc; padding:5px; text-align:center;">Quantity</th>
                                <th style="border:1px solid #ccc; padding:5px; text-align:center;">Rate</th>
                                <th style="border:1px solid #ccc; padding:5px; text-align:right;">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.invoice_line_ids" t-as="line">
                                <td style="border:1px solid #ccc; padding:5px;" t-esc="line.product_id.display_name"/>
                                <td style="border:1px solid #ccc; padding:5px; text-align:center;" t-esc="line.quantity"/>
                                <td style="border:1px solid #ccc; padding:5px; text-align:center;" t-esc="line.price_unit"/>
                                <td style="border:1px solid #ccc; padding:5px; text-align:right;" t-esc="line.price_subtotal"/>
                            </tr>
                            <!-- Optional: Negative Adjustment -->
                            <tr t-if="line.price_subtotal &lt; 0">
                                <td colspan="3" style="border:1px solid #ccc; padding:5px; text-align:right; color:red;">Adjustment / Deduction</td>
                                <td style="border:1px solid #ccc; padding:5px; text-align:right; color:red;" t-esc="line.price_subtotal"/>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Totals -->
                    <table style="width:100%; margin-bottom:20px;">
                        <tr>
                            <td style="text-align:right;"><strong>Total:</strong></td>
                            <td style="text-align:right;" t-esc="doc.amount_total"/>
                        </tr>
                    </table>

                    <!-- Footer -->
                    <!-- <p><strong>Amount Chargeable (in words):</strong> <span t-esc="doc.amount_total_in_words"/></p> -->
                    <p><strong>Authorized Signatory:</strong></p>

                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_monstar_invoice" model="ir.actions.report">
        <field name="name">Monstar Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">monstar_report.monstar_invoice_pdf</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Invoice - %s' % (object.name)</field>
    </record>
</odoo>
