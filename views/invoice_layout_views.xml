<odoo>
    <record id="view_monstar_invoice_form" model="ir.ui.view">
        <field name="name">monstar.invoice.form</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form string="Invoice">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="invoice_date"/>
                        <field name="move_type"/>
                    </group>
                    <group>
                        <field name="invoice_line_ids" widget="list">
                            <list>
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="price_unit"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
